{
  "name": "mylife-home-packager",
  "version": "1.0.0",
  "description": "MyLife Home Packager",
  "author": "Vincent Trumpff",
  "homepage": "https://github.com/mylife-home/mylife-home-main#readme",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mylife-home/mylife-home-main.git"
  },
  "scripts": {
    "__clean": "rm -rf dist",
    "__build:prod": "webpack --config=webpack.config/cli.ts --env mode=prod --env wait",
    "__build:dev": "webpack --config=webpack.config/cli.ts --env mode=dev --env wait",
    "__webpack:studio": "webpack --watch --config=webpack.config/cli.ts --env mode=dev --env binary=studio --env part=client",
    "build-all:prod": "gulp build:prod:ui && gulp build:prod:core && gulp build:prod:studio",
    "build-all:dev": "gulp build:dev:ui && gulp build:dev:core && gulp build:dev:studio",
    "build-all:docker": "gulp docker:build:ui && gulp docker:build:irc-bridge",
    "start:serve-dist": "http-server -c-1 ./dist",
    "start:irc-bridge": "node --trace-warnings dist/dev/core/bin.js --config=test/irc-bridge/config.json | ../mylife-home-common/node_modules/.bin/bunyan",
    "start:ui": "node --trace-warnings dist/dev/ui/bin.js --config=test/ui/config.json | ../mylife-home-common/node_modules/.bin/bunyan",
    "start:studio": "node --trace-warnings dist/dev/studio/bin.js --config=test/studio/config.json | ../mylife-home-common/node_modules/.bin/bunyan",
    "docker:start:ui": "docker run --rm -d --network host -e DATA_PATH=/tmp --name mylife-home-ui mylife-home-ui:testing",
    "docker:stop:ui": "docker rm -f mylife-home-ui",
    "docker:restart:ui": "npm run docker:stop:ui && npm run docker:start:ui",
    "docker:start:irc-bridge": "docker run --rm -d --network host --name mylife-home-core-irc-bridge mylife-home-core-irc-bridge:testing",
    "docker:stop:irc-bridge": "docker rm -f mylife-home-core-irc-bridge",
    "docker:restart:irc-bridge": "npm run docker:stop:irc-bridge && npm run docker:start:irc-bridge",
    "docker:start:studio": "docker run --rm -d --network host -v $(realpath ../../../mylife-home-studio-data-dev):/data --name mylife-home-studio mylife-home-studio:testing",
    "docker:stop:studio": "docker rm -f mylife-home-studio",
    "docker:restart:studio": "npm run docker:stop:studio && npm run docker:start:studio"
  },
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@types/copy-webpack-plugin": "^6.3.0",
    "@types/fancy-log": "^1.3.1",
    "@types/gulp": "^4.0.6",
    "@types/merge2": "^1.3.0",
    "@types/mini-css-extract-plugin": "^1.2.1",
    "@types/rimraf": "^3.0.0",
    "@types/terser-webpack-plugin": "^5.0.2",
    "@types/webpack": "^4.41.26",
    "@types/webpack-bundle-analyzer": "^3.9.0",
    "@types/webpack-merge": "^4.1.5",
    "@types/yargs": "^15.0.7",
    "babel-loader": "^8.2.2",
    "before-build-webpack": "^0.2.9",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.0.2",
    "del": "^5.1.0",
    "fancy-log": "^1.3.3",
    "file-loader": "^6.2.0",
    "glob": "^7.1.6",
    "gulp": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "html-webpack-plugin": "^5.2.0",
    "http-server": "^0.12.3",
    "merge2": "^1.4.1",
    "mini-css-extract-plugin": "^1.3.1",
    "purgecss-webpack-plugin": "^3.0.0",
    "rimraf": "^3.0.2",
    "sass": "^1.29.0",
    "sass-loader": "^10.1.0",
    "shebang-loader": "0.0.1",
    "source-map-loader": "^1.1.2",
    "source-map-support": "^0.5.19",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5",
    "webpack": "^5.23.0",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.5.0",
    "webpack-merge": "^5.7.3",
    "yargs": "^16.0.3"
  },
  "dependencies": {
    "mylife-home-common": "^1.0.0",
    "mylife-home-core": "^1.0.0",
    "mylife-home-core-plugins-irc": "^1.0.0",
    "mylife-home-ui": "^1.0.0",
    "mylife-home-studio": "^1.0.0"
  }
}
