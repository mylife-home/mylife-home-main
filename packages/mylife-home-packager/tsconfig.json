{
    "compilerOptions": {
        "alwaysStrict": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2019",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "paths": {
            "*": [
                "node_modules/*",
                "types/*"
            ]
        }
    }
}