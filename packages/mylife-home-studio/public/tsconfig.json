{
    "compilerOptions": {
        "alwaysStrict": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": ".",
        "jsx": "react",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
    }
}